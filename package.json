{
  "name": "onnislu-price-tracker",
  "version": "1.0.0",
  "description": "React-based web application that tracks apartment prices at ONNISLU over time",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon --exec ts-node src/server/index.ts",
    "dev:client": "cd src/client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json && mkdir -p dist/server/data && cp src/server/data/floor-plan-metadata.json dist/server/data/",
    "build:client": "cd src/client && npm run build",
    "start": "node dist/server/index.js || node dist/server/server/index.js || node dist/index.js",
    "test": "jest --forceExit --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --forceExit",
    "test:ci": "jest --coverage --maxWorkers=2 --forceExit --detectOpenHandles",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "migrate": "ts-node src/server/scripts/migrate.ts",
    "seed": "ts-node src/server/database/seed.ts",
    "download:plans": "ts-node src/server/scripts/downloadPlanImages.ts",
    "scrape:metadata": "ts-node src/server/scripts/scrapeFloorPlanMetadata.ts",
    "update:metadata": "ts-node src/server/scripts/updateFloorPlanMetadata.ts",
    "load:metadata": "node dist/server/scripts/loadFloorPlanMetadata.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "node-cron": "^3.0.3",
    "puppeteer": "^21.5.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.9.0",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "jsdom": "^22.1.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "apartment",
    "price-tracker",
    "react",
    "typescript",
    "web-scraping"
  ],
  "author": "",
  "license": "MIT"
}
